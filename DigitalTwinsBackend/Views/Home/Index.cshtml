@{
    ViewData["Title"] = "Azure Digital Twins Backend - Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/archi.jpg" alt="Architecture Digital Twins" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to use Azure Digital Twins to map your IoT data
                    <a class="btn btn-default" href="https://docs.microsoft.com/en-us/azure/digital-twins/about-digital-twins">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Edit.png" alt="Space Edit" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    You will be able to edit and extend properties, attach files or associate UDF to Spaces 
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Devices.png" alt="Device Hierarchy" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Discover device, sensor hierarchy
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Simulator.png" alt="Simulator" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    To accelerate the experience, we've added a device simulator reusing the DataTypes managed by Digital Twins
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>View</h2>
        <ul>
            <li><a asp-area="" asp-controller="Space" asp-action="List">List all Spaces</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Add</h2>
        <ul>
            <li><a asp-area="" asp-controller="Space" asp-action="Create">Create a new space element</a></li>
            <li><a asp-area="" asp-controller="Provision" asp-action="Index">Run a YAML script</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Localize</h2>
        <ul>
            <li><a asp-area="" asp-controller="Device" asp-action="List">Discover all Devices</a></li>
            <li><a asp-area="" asp-controller="UDF" asp-action="List">Discover all UDF</a></li>
            <li><a asp-area="" asp-controller="PropertyKey" asp-action="List">Discover all Property keys</a></li>
        </ul>
    </div>

    <div class="col-md-3">
        <h2>Administer</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Settings">Modify application settings</a></li>
        </ul>
    </div>
</div>
