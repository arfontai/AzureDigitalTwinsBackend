@model IEnumerable<DigitalTwinsBackend.Models.Space>

@{
    ViewData["Title"] = "List";
}

<h2>List</h2>
    <h4>Spaces</h4>

<p>
    <a asp-action="Create">Create a New Space</a>
</p>

<div class="row">
    <div class="col-md-offset-0">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FriendlyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParentSpaceId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Id != Guid.Empty)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FriendlyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentSpaceId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        </div>
    </div>

        <div>
            <a asp-area="" asp-controller="Home" asp-action="Spaces">Back to home</a>
        </div>
