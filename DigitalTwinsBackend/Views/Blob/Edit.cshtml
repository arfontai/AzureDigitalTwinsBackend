@model DigitalTwinsBackend.ViewModels.BlobContentViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Edit</h2>

<h4>Blob Content</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="SelectedBlobContentItem.Id" type="hidden" />
            <input asp-for="SelectedBlobContentItem.ParentId" type="hidden" />
            <input asp-for="SelectedBlobContentItem.ParentType" type="hidden" />
            <div class="form-group">
                <label asp-for="SelectedBlobContentItem.Name" class="control-label"></label>
                <input asp-for="SelectedBlobContentItem.Name" class="form-control" />
                <span asp-validation-for="SelectedBlobContentItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedBlobContentItem.Description" class="control-label"></label>
                <input asp-for="SelectedBlobContentItem.Description" class="form-control" />
                <span asp-validation-for="SelectedBlobContentItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedBlobContentItem.ParentId" class="control-label"></label>
                <input asp-for="SelectedBlobContentItem.ParentId" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="SelectedBlobContentItem.Type" class="control-label"></label>
                <select asp-for="SelectedBlobContentItem.Type" class="form-control" asp-items="@(new SelectList(Model.BlobContentTypeList,"Name","Name"))"></select>
                <span asp-validation-for="SelectedBlobContentItem.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedBlobContentItem.Subtype" class="control-label"></label>
                <select asp-for="SelectedBlobContentItem.Subtype" class="form-control" asp-items="@(new SelectList(Model.BlobContentSubTypeList,"Name","Name"))"></select>
                <span asp-validation-for="SelectedBlobContentItem.Subtype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Add file (only images are supported for the moment)</label>
                <input type="file" asp-for="File" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" name="updateButton" value="Update" class="ButtonEdit" />
                <input type="submit" name="updateButton" class="ButtonCancel" value="Cancel" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div>
            <img src="@Model.SelectedBlobContentItem.ContentInfos[0].FilePath" alt="Image" class="resize" />
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
